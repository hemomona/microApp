#: kivy 2.1.0

<ARecordScreen>:
    name: "arecord"
    AnchorLayout:
        anchor_y: 'top'
        BoxLayout:
            size_hint: None, None
            size: 360, 30
            Label:
                text: '修订记录'
                font_name: msyhbd
                font_size: '20sp'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            text: '<返回'
            size_hint: None, None
            size: 60, 30
            font_name: msyh
            font_size: '20sp'
            color: 0, 0, 1
            background_normal: ''
            background_color: 0, 0, 0, 0
            on_release: root.goto_main()
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            text: '保存√'
            size_hint: None, None
            size: 60, 30
            font_name: msyh
            font_size: '20sp'
            color: 0, 0, 1
            background_normal: ''
            background_color: 0, 0, 0, 0
    Label:
        text: str(root.record_id)